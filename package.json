{
  "name": "project-starter",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.ts",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc -b && copyfiles -u 1 src/**/*.graphql dist",
    "prepare": "yarn clean && yarn build",
    "start": "yarn prepare && node dist/index.js",
    "dev": "nodemon --exec ts-node --files src/index.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "gen:schema": "apollo schema:download --endpoint=http://localhost:4000/graphql schema.json",
    "gen:types": "yarn run gen:schema && gql2ts --ignore-type-name-declaration schema.json -o src/types/schema.d.ts",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli -f ./src/ormconfig.js"
  },
  "dependencies": {
    "apollo-server": "^2.7.0",
    "apollo-server-express": "^2.7.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "glob": "^7.1.4",
    "graphql": "^14.4.2",
    "merge-graphql-schemas": "^1.6.1",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.18",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.5",
    "@types/express": "^4.17.0",
    "@types/glob": "^7.1.1",
    "@types/graphql": "^14.2.2",
    "@types/node": "^12.6.8",
    "@types/uuid": "^3.4.5",
    "apollo": "^2.16.0",
    "copyfiles": "^2.1.1",
    "gql2ts": "^1.10.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-node": "8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.5.3"
  }
}
