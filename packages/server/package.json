    "@types/express": "^4.17.0",
    "@types/glob": "^7.1.1",
    "@types/graphql": "^14.2.2",
    "@types/node": "^12.6.2",
    "copyfiles": "^2.1.1",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-node": "8.3.0",
